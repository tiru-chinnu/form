<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin page</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; } ::-webkit-scrollbar {
      background: #dadada; width: 9px; } ::-webkit-scrollbar-thumb { background:
      #007bff; border-radius: 10px; } ::-webkit-scrollbar-thumb:hover {
      background: #0959af; } body { font-family: Arial, sans-serif;
      background-color: #f4f7f9; padding: 20px; display: flex; justify-content:
      center; align-items: flex-start; min-height: 100vh; } .complaints { width:
      90%; max-width: 1200px; position: relative; } h1 { font-size: 1.8rem;
      color: #333; margin-bottom: 20px; border-bottom: 2px solid #00796b;
      padding-bottom: 10px; text-transform: uppercase; } .card {
      background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 6px
      rgba(0, 0, 0, 0.1); margin: 20px 0; padding: 20px; display: flex;
      flex-direction: column; gap: 10px; } .name, .student-id, .faculty-id,
      .issue-type, .location, .description { font-size: 1.1rem; color: #555; }
      .name { font-weight: bold; color: #00796b; } .issue-type {
      background-color: #e0f7fa; color: #00796b; font-size: 1rem; padding: 8px
      12px; border-radius: 5px; display: inline-block; } .description {
      background-color: #f4f7f9; color: #333; padding: 10px; border-radius: 5px;
      } .username { background: #111; padding: 5px; position: absolute; top: 0;
      left: 0; color: #fff; font-size: 0.5rem; transform: translateY(-110%);
      border-radius: 5px; font-weight: 900; } hr { border: none; border-top: 2px
      solid #ccc; margin: 30px 0; } input[type="button"] { width: 90px; padding:
      7px; text-align: center; border-color: #fff; border-radius: 15px;
      position: absolute; right: 0; } input[value="chat"]{ padding: 5px; scale:
      .9; } .chatGround { transform: translateX(-100%); width: 100%; height:
      100%; position: fixed; display: flex; justify-content: center;
      align-items: center; z-index: 9; background: transparent; backdrop-filter:
      blur(10px); top: 0; } .userData { font-size: 0.9rem; color: #fff;
      font-weight: 500; } .globalChat { width: 90%; height: 90%; position:
      relative; display: flex; align-items: center; flex-direction: column;
      border: 2.5px solid #007bff; border-radius: 10px; overflow: hidden; & form
      { position: absolute; bottom: 0; right: 0; margin: 10px; & input {
      border-radius: 10px; color: #007bff; padding: 10px; border-color: #fff; }
      & input[type="submit"] { color: #fff; background: #007bff; border-radius:
      5px; } } } .chat { width: 100%; height: 80%; position: absolute; overflow:
      auto; background: #dadada; display: flex; justify-content: start;
      flex-direction: column; padding: 10px 20px; } .msg { margin: 20px;
      position: relative; width: auto; height: max-content; padding: 7px;
      background: #007bff; width: max-content; max-width: 50%; border-radius: 0
      10px 10px 0; }
    </style>
  </head>

  <body>
    <div class="chatGround">
      <div class="globalChat">
        <div class="chat"></div>
        <form action="">
          <input type="text" name="chat" />
          <input type="submit" value="enter" />
        </form>
      </div>
    </div>
    <input type="button" value="chat" />
    <div class="complaints">
      <a href="/logout"><input type="button" value="logout" /></a>
      <div class="students">
        <h1>students:</h1>
        {{{students}}}
      </div>
      <hr color="#111" />
      <div class="faculty">
        <h1>faculty:</h1>
        {{{faculty}}}
      </div>
      <input type="hidden" value="{{username}}" username />
    </div>
    <script>
      let username = document.querySelector('input[username]')
      sessionStorage.setItem('username', username.value)
    </script>
    <script src="js/apiCalls.js"></script>

  </body>

</html>